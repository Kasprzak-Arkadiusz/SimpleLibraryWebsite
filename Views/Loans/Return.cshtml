@model SimpleLibraryWebsite.Models.ViewModels.BookReturnViewModel

@{
    ViewData["Title"] = "Return";
}

<h1>Book return</h1>
<h3>Are you sure you want to return this book?</h3>

<div>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReturnedBook.Author)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReturnedBook.Author)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReturnedBook.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReturnedBook.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReturnedBook.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReturnedBook.Genre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Loan.Reader.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Loan.Reader.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Loan.Reader.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Loan.Reader.LastName)
        </dd>
    </dl>
    
    <form asp-action="Return">
        <a asp-action="Index">Back to List</a> |
        <input type="submit" value="Return" asp-route-id="@Model.Loan.LoanId" class="btn-primary" />
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}