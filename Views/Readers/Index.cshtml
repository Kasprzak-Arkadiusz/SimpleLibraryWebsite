@model SimpleLibraryWebsite.Models.ReaderViewModel

@{
    ViewData["Title"] = "List of readers";
}

<h1>List of readers</h1>
    
<p>
    Below you can view the list of readers.
</p>
    
<form asp-controller="Readers" asp-action="Index" method="get">
    <div class="container">
        <div class="row">
            <div class="form-group">
                <div class="col-md-8">
                    <b>Reader name:</b>
                    <input type="text" asp-for="ReaderName" />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <div class="col-md-8">
                    <b>Reader surname:</b>
                    <input type="text" asp-for="ReaderSurname" />
                </div>
            </div>
        </div>
        <input type="submit" value="Filter" />
    </div>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Readers[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Readers[0].Surname)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Readers) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ReaderID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ReaderID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ReaderID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
