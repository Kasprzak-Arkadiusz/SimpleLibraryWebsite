@model IEnumerable<SimpleLibraryWebsite.Models.Request>
@{ 
    ViewBag.Title = "My book requests";
}
<h1>@ViewBag.Title</h1>

<p>Here you can view book requests you've submitted.</p>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (Request item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RequestId" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.RequestId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>