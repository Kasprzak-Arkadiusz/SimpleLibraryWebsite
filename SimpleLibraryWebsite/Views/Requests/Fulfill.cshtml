@model SimpleLibraryWebsite.Models.Request

@{
    ViewBag.Title = "Fulfill a book request";
}

<h1>@ViewBag.Title</h1>

<h3>Are you sure you want to fulfill this request?</h3>
<hr/>

<p class="text-danger center">@ViewBag.ConcurrencyError</p>

<div>
    <div class="row justify-content-center">
        <b class = "col-sm-2 center">
            @Html.DisplayNameFor(model => model.Title)
        </b>
        <div class = "col-sm-4 center">
            @Html.DisplayFor(model => model.Title)
        </div>
        <div class="w-100"></div>
        <b class = "col-sm-2 center">
            @Html.DisplayNameFor(model => model.Author)
        </b>
        <div class = "col-sm-4 center">
            @Html.DisplayFor(model => model.Author)
        </div>
        <div class="w-100"></div>
        <b class = "col-sm-2 center">
            @Html.DisplayNameFor(model => model.Genre)
        </b>
        <div class = "col-sm-4 center">
            @Html.DisplayFor(model => model.Genre)
        </div>
        <div class="w-100"></div>
    </div>
    
    <form asp-action="Fulfill" class="container center" style="margin-top: 25px">
        <input type="hidden" asp-for="RequestId" />
        <input type="hidden" asp-for="RowVersion" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        <input type="submit" value="Fulfill" class="btn btn-info"/>
    </form>
</div>